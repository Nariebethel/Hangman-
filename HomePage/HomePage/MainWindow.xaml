<Window x:Class="Hangman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hangman"
        mc:Ignorable="d"
        Title="Hangman" Height="800" Width="1500" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="SingleBorderWindow">
   <Grid>
      <Grid.Background>
         <ImageBrush ImageSource="Images/CoverPhoto.png"/>
      </Grid.Background>
      <Button x:Name="Play_Button" Margin="805,300,122.6,317.2" BorderThickness="2" Click="Play_Button_Click" Foreground="{x:Null}" BorderBrush="Black" FontSize="72" FontWeight="Bold" Opacity="0.05">
         <Button.Background>
            <SolidColorBrush Color="Black" Opacity="0.02"/>
         </Button.Background>
      </Button>
      <Slider x:Name="Level_Difficulty_Slider" Margin="1162,713,31.6,45.2" IsSnapToTickEnabled="True" Maximum="3" TickPlacement="BottomRight"
              ValueChanged="Level_Difficulty_Slider_ValueChanged" IsMoveToPointEnabled="True" VerticalAlignment="Center"/>
      <Label x:Name="Level_Difficulty_Label" Content="EASY" Margin="1140,660,9.6,69.2" Background="Transparent" FontSize="24" 
             HorizontalContentAlignment="Center" FontFamily="Ink Free" FontWeight="Bold" Foreground="White"/>

   </Grid>
</Window>
